Algoritmo "area"

Var
   // Seção de Declarações das variáveis
   area, lado: real

Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...
   Escreva("Informe o tamanho do lado do quadrado: ")
   leia(lado)
   area <- lado * 2
   Escreval("")
   escreval("A area do quadrado é: ", area)

Fimalgoritmo